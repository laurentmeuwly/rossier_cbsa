{% extends "base.html.twig" %}

{% block title %}Book print{% endblock %}

{% block body %}
<h2>Livre code-barre des chantiers</h2>

{# d√©but de la table #}
<table width="850px">
<thead>
<tr>
	<th style="text-align: left;" width="200px">Code</th>
	<th style="text-align: left;" width="300px">Nom chantier</th>
	<th style="text-align: left;" width="350px">Adresse</th>
</tr>
</thead>

<tbody>
{% for site in sites %}
<tr style="page-break-inside: avoid;">
	<td style="align: center; padding: 10px">
		<img src="{{ absolute_url(asset('/uploads/images/barcodes/site_' ~ site.id ~ '.png' )) }}"  width="162px" height="90px"/>
    </td>
	<td>{{ site.name }}</td>
	<td>{{ site.address }}, {{ site.postcode }} {{ site.city }}</td>
</tr>
{%  endfor %}
</tbody>

</table>
{# fin de la table #}

{% endblock %}
