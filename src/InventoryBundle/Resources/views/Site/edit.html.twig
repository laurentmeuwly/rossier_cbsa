{% extends "InventoryBundle::layout.html.twig" %}

{% block body %}
    <h1>Site edit</h1>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.name, "Nom du chantier", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.name) }}
    		<div class="col-sm-10">
              {{ form_widget(form.name) }}
    		</div>
  		</div>
  		
  		<div class="form-group">
            {{ form_label(form.address, "Adresse", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.address) }}
    		<div class="col-sm-10">
              {{ form_widget(form.address) }}
    		</div>
  		</div>
  		
  		<div class="form-group">
            {{ form_label(form.postcode, "NPA / Localit√©", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.postcode) }}
    		<div class="col-sm-10">
              {{ form_widget(form.postcode) }} / {{ form_widget(form.city) }}
    		</div>
  		</div>
  		{{ form_widget(form.status) }}
        
        <div class="form-group">
            <div class="col-sm-10">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
    {{ form_end(form) }}

    <p>&nbsp;</p>
    <ul style="list-style-type: none;">
        <li>
            <a class="btn btn-default btn-xs" href="{{ path('site_index', {'page': 1}) }}">Back to the list</a>
        </li>
        <li style="margin-top: 10px;">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
