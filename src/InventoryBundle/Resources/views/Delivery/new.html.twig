{% extends "InventoryBundle::layout.html.twig" %}

{% block body %}
    <h1>{{ 'inventory.delivery.form'|trans }}</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.deliveryDate, "Date de livraison", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.deliveryDate) }}
    		<div class="col-sm-10">
              {{ form_widget(form.deliveryDate) }}
    		</div>
  		</div>
  		
  		<div class="form-group">
            {{ form_label(form.site, "Chantier", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.site) }}
    		<div class="col-sm-10">
              {{ form_widget(form.site, { 'value':site }) }}
              {{ form_widget(form.original_site, { 'disabled' : 'disabled', 'value':site }) }}
    		</div>
  		</div>
  		
  		
  		<div class="form-group">
  		    <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Article</th>
                            <th>Unité</th>
                            <th>Quantité</th>
                            <th></th>
                        </tr>
                        </thead>
        				<tbody>
        					<tr>
                                <td>{{ form_widget(form.deliveredProducts.product) }}</td>
                                <td>unit</td>
        						<td>{{ form_widget(form.deliveredProducts.quantity) }}</td>
        						<td>{{ form_widget(form.deliveredProducts.deliveryCostPrice) }}</td>
        					</tr>
        				</tbody>
                    </table>
                </div>
        	</div>
  		</div>
  		
  		
  		<div class="form-group">
            <div class="col-sm-10">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
        
    {{ form_end(form) }}
    
    
    <script language="JavaScript" type="text/javascript">
   		window.onload = function() {
      		document.getElementById('inventorybundle_delivery_save').focus();
   		};
  	</script>
    

{% endblock %}
