{% extends "InventoryBundle::layout.html.twig" %}

{% block body %}
    <h1>Delivery edit</h1>

 {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.deliveryDate, "Date de livraison", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.deliveryDate) }}
    		<div class="col-sm-10">
              {{ form_widget(form.deliveryDate) }}
    		</div>
  		</div>
  		
  		<div class="form-group">
            {{ form_label(form.site, "Chantier", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.site) }}
    		<div class="col-sm-10">
              {{ form_widget(form.site) }}
    		</div>
  		</div>
  		
  		<div class="form-group">
            <div class="col-sm-10">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
        
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('delivery_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
