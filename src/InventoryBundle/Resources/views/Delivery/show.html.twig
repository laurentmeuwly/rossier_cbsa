{% extends "InventoryBundle::layout.html.twig" %}

{% block body %}
    <h1>Delivery</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ delivery.id }}</td>
            </tr>
            <tr>
                <th>Deliverydate</th>
                <td>{% if delivery.deliveryDate %}{{ delivery.deliveryDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    
    <h2>Product</h2>
<ul class="record_actions">
    {% for p in entity.po %}
    <li>
        {{ p.product }}
    </li>
    {% endfor %}
</ul> 

    <ul>
        <li>
            <a href="{{ path('delivery_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('delivery_edit', { 'id': delivery.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
